<?xml version="1.0"?>

<layout version="1.0.1">
	<default>
		<reference name="footer_links">
			<action method="addLink" translate="label title" module="inchoo_ticketmanager" ifconfig="ticket/view/enabled">
				<label>Tickets</label>
				<url>ticket</url>
                <prepare/>
                <urlParams helper="core/url/getHomeUrl" />
                <title>Tickets</title>
			</action>
        </reference>
	</default>

	<inchoo_ticketmanager_index_index translate="label">
		<label>Tickets Page</label>
		<reference name="root">
			<action method="setTemplate">
				<template>page/2columns-left.phtml</template>
			</action>
			<action method="setHeaderTitle" translate="title" module="inchoo_ticketmanager">
				<title>Tickets</title>
			</action>
		</reference>
		<reference name="content">
			<block type="inchoo_ticketmanager/list" name="ticket.list" template="inchoo/ticketmanager/list.phtml"/>
		</reference>
	</inchoo_ticketmanager_index_index>

	<inchoo_ticketmanager_index_view translate="label">
		<label>Ticket Item Page</label>
		<reference name="root">
			<action method="setTemplate">
				<template>page/2columns-left.phtml</template>
			</action>
			<action method="setHeaderTitle" translate="title" module="inchoo_ticketmanager">
				<title>Ticket</title>
			</action>
		</reference>
		<reference name="content">
			<block type="inchoo_ticketmanager/ticket" name="ticket.item" template="inchoo/ticketmanager/item.phtml"/>
		</reference>
	</inchoo_ticketmanager_index_view>
</layout>
